<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment_getContactNumbers"
    android:orientation="vertical">

    <TextView
        android:id="@+id/GCD_headingTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:text="@string/GCD_headingTxt2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/getContactNo1Edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:autofillHints="@string/edtTxtContNoHint1"
        android:hint="@string/edtTxtContNoHint1"
        android:inputType="phone"
        android:textAlignment="center"
        android:minHeight="50dp" />

    <EditText
        android:id="@+id/getContactNo2Edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="@string/edtTxtContNoHint2"
        android:autofillHints="@string/edtTxtContNoHint2"
        android:inputType="phone"
        android:textAlignment="center"
        android:minHeight="50dp" />

    <EditText
        android:id="@+id/getContactNo3Edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="@string/edtTxtContNoHint3"
        android:autofillHints="@string/edtTxtContNoHint3"
        android:inputType="phone"
        android:textAlignment="center"
        android:minHeight="50dp" />


    <Button
        android:id="@+id/navNxtBtnContNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="#FEFEFE"
        android:minHeight="50dp"
        android:text="@string/navNxtBtnTxt"
        app:cornerRadius="50dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

</LinearLayout>